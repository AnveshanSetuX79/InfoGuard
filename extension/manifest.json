{
"manifest_version": 3,
"name": "InfoGuard Companion",
"description": "Detect and explain potential misinformation on any page.",
"version": "0.1.0",
"action": {
"default_title": "InfoGuard Verdict",
"default_popup": "popup/index.html"
},
"icons": {
"16": "assets/icon16.png",
"48": "assets/icon48.png",
"128": "assets/icon128.png"
},
"permissions": [
"activeTab",
"storage"
],
"background": {
"service_worker": "background/service.js",
"type": "module"
},
"content_scripts": [
{
"matches": ["<all_urls>"],
    "js": ["content/highlight.js"],
    "run_at": "document_idle"
    }
    ]
    }